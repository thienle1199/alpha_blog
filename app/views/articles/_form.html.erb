<div class='row'>
  <div class='col-xs-12'>
    
    <%= simple_form_for(@article, wrapper: :horizontal_form, :html => {class: 'form-horizontal'})  do |f| %>
 
      <%= f.input :title, placeholder: 'Title of article' %>
      <%= f.input :description, as: :text, autofocus: true,  :input_html => {:rows => 10}, placeholder: 'Body of article' %>
      <%= f.association :categories, as: :check_boxes, :wrapper => :horizontal_radio_and_checkboxes %>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
  <div class="col-xs-4-col-xs-offset-4 text-center">
    [
    <%= link_to "Cancel request and return to articles listing", articles_path %>
    ]
  </div>
</div>
</div>
