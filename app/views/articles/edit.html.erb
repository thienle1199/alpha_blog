<h1>Editing existing articles</h1>
<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %></p><br/>
    <%= f.text_field :title %>
  </p>
<p>
  <%= f.label :decription %><br>
  <%= f.text_area :decription %>
</p>
<p>
  <%= f.submit %>
</p>
  <% end %>
  <%= link_to "Back to articles listing", articles_path %>